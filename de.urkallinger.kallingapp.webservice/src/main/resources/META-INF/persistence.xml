<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="kallingapp" transaction-type="RESOURCE_LOCAL">
		<class>de.urkallinger.kallingapp.datastructure.DataObject</class>
		<class>de.urkallinger.kallingapp.datastructure.User</class>
		<class>de.urkallinger.kallingapp.datastructure.Motion</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.2.105:3306/kallingapp" />
			<property name="javax.persistence.jdbc.user" value="kallinga" />
			<property name="javax.persistence.jdbc.password" value="test123456" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
	</persistence-unit>
</persistence>

